config globals 'globals'
	option ula_prefix 'fd71:1719:8822::/48'

config device 'lan_dev'
	option name 'eth0'
	option macaddr '60:38:e0:a6:4f:73'

config device 'wan_dev'
    option name 'eth1'
    option macaddr '60:38:e0:a6:4f:72'

{% for interface in listen_interfaces %}
config interface 'rita_{{interface | replace(".","")}}'
        option ifname {{interface}}
        option proto static
{% endfor %}

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

# you can't use vlan 1 on this device, so we put port 1 on vlan 5
config switch_vlan
	option device 'switch0'
	option vlan '6'
	option ports '1 0t'

config switch_vlan
	option device 'switch0'
	option vlan '3'
	option ports '2 0t'

config switch_vlan
	option device 'switch0'
	option vlan '4'
	option ports '3 0t'

config switch_vlan
	option device 'switch0'
	option vlan '5'
	option ports '4 0t'