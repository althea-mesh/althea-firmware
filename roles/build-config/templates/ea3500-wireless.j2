config wifi-device 'radio0'
        option type 'mac80211'
        option channel '{{channel}}'
        option hwmode '11g'
	    option path	'mbus/mbus:pcie-controller/pci0000:00/0000:00:01.0/0000:01:00.0'
        option htmode 'HT20'
        option ifname 'wlan0'
        option disabled '{{wifi_disabled}}'

config wifi-iface 'default_radio0'
        option device 'radio0'
        option network 'lan'
        option mode 'ap'
        option ssid '{{wifi_ssid}}'
        option encryption '{{wifi_encryption}}'
        option key 'ChangeMe'

config wifi-device 'radio1'
        option type 'mac80211'
        option channel '{{five_ghz_channel}}'
        option hwmode '11a'
	    option path	'mbus/mbus:pcie-controller/pci0000:00/0000:00:02.0/0000:02:00.0'
        option htmode 'HT20'
        option ifname 'wlan1'
        option disabled '{{wifi_disabled}}'

config wifi-iface 'default_radio1'
        option device 'radio1'
        option network 'lan'
        option mode 'ap'
        option ssid '{{wifi_ssid}}'
        option encryption '{{wifi_encryption}}'
        option key '{{wifi_key}}'